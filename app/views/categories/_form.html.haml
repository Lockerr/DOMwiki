= form_for @category, :html => { :class => 'form-horizontal' } do |f|
  - if @category.parent_id
    = f.hidden_field :parent_id
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :rubric_id, :class => 'control-label'
    .controls
      = f.number_field :rubric_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), categories_path, :class => 'btn'
