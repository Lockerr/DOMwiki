%legend
  Listing companys
- if @companies.presence
  %table.table.table-striped.table-bordered
    %tr
      %th Name
      %th Description
      %th Country
      %th{style: 'width: 9%;'} actions
      

    - @companies.each do |company|
      %tr
        %td= company.name
        %td= company.description
        %td= company.country.try :name
        %td
          = link_to glyph(:search), company, class: 'btn btn-mini'
          = link_to glyph(:edit), edit_company_path(company), class: 'btn btn-mini'
          = link_to glyph(:remove), company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger'

  %br

= link_to 'New Company', new_company_path, class: :btn
