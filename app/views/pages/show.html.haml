- model_class = Page
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  #page_title{:data => {:mercury => :full}}
    = raw @page.title
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  #page_title{:data => {:mercury => :full}}
    = @page.title
%p
  %strong= model_class.human_attribute_name(:assessment) + ':'
  %br
  = @page.assessment
%p
  %strong= model_class.human_attribute_name(:bugs) + ':'
  %br
  = @page.bugs
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @page.description
%p
  %strong= model_class.human_attribute_name(:keywords) + ':'
  %br
  = @page.keywords
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  #page_body{:data => {:mercury => :full}}
    = @page.body

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), pages_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_page_path(@page), :class => 'btn'
  
  = link_to t('.edit', :default => t("helpers.links.edit")), "/editor" + request.path, :class => 'btn', id: "edit_link", data: { save_url: mercury_update_page_path(@page) }
  
  = link_to t('.destroy', :default => t("helpers.links.destroy")), page_path(@page), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
