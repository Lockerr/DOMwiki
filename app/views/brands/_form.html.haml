= form_for @brand, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :country_id, :class => 'control-label'
    .controls
      = f.number_field :country_id, :class => 'number_field'
  .control-group
    = f.label :desc, :class => 'control-label'
    .controls
      = f.text_area :desc, :class => 'text_area'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), brands_path, :class => 'btn'
