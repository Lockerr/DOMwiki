- model_class = Brand
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @brand.name
%p
  %strong= model_class.human_attribute_name(:country_id) + ':'
  %br
  = @brand.country_id
%p
  %strong= model_class.human_attribute_name(:desc) + ':'
  %br
  = @brand.desc

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), brands_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_brand_path(@brand), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), brand_path(@brand), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
